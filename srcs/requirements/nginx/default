# this block will redirect each http request to https
server{
    listen 80;
    listen [::]:80;
    server_name _;
    return 301 https://$host$request_uri;
}
# this block define the settings for a particular server that listens on the HTTPS protocol on port 443 
server {
    listen  443 ssl;
    listen  [::]:443 ssl;
    
    root /var/www/html/wordpress;
    index index.php index.html index.htm;

    server_name _;
    ssl_certificate /etc/nginx/ssl-certs/inception.crt;
    ssl_certificate_key /etc/nginx/ssl-certs/inception.key;
    ssl_protocols TLSv1.2 TLSv1.3;

    location / {
        try_files $uri $uri/ /index.php?$args =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        # With php-fpm (or other unix sockets):                
		fastcgi_pass unix:/run/php/php7.3-fpm.sock;
    }
}